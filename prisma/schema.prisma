// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  summary     String
  description String
  tags        String   // JSON string of string[]
  repoUrl     String?
  liveUrl     String?
  coverId     String?
  mediaIds    String   @default("[]") // JSON string of string[]
  projectType String   @default("developed") // "developed" | "supervised"
  order       Int      @default(0) // For custom ordering
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

model Experience {
  id          String   @id @default(cuid())
  role        String
  company     String
  startDate   DateTime
  endDate     DateTime?
  summary     String   @db.Text
  highlights  String   @db.Text @default("[]") // JSON string of string[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("experiences")
}

model Tech {
  id     String @id @default(cuid())
  label  String @unique
  level  String?
  group  String?

  @@map("tech")
}

model Media {
  id        String   @id @default(cuid())
  title     String
  publicId  String
  type      String   // "image" | "video"
  createdAt DateTime @default(now())

  @@map("media")
}

model Link {
  id    String @id @default(cuid())
  label String
  url   String

  @@map("links")
}

model Training {
  id          String   @id @default(cuid())
  title       String
  institution String
  startDate   DateTime
  endDate     DateTime?
  description String?
  certificate String?  // URL to certificate or file path
  order       Int      @default(0) // For custom ordering
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("trainings")
}

model Visitor {
  id        String   @id @default(cuid())
  ipAddress String
  userAgent String?
  referer   String?
  visitedAt DateTime @default(now())
  createdAt DateTime @default(now())

  @@map("visitors")
}